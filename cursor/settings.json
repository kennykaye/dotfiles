{
    "editor.fontLigatures": true,
    "editor.copyWithSyntaxHighlighting": false,
    "editor.occurrencesHighlight": "off",
    "editor.fontSize": 13,
    "editor.fontFamily": "FiraCode Nerd Font, Menlo, Monaco, 'Courier New', monospace",
    "terminal.integrated.fontFamily": "FiraCode Nerd Font, Menlo, Monaco, 'Courier New', monospace",
    "terminal.integrated.fontLigatures": true,
    "terminal.integrated.fontWeight": "normal",
    // "window.zoomLevel": 0.5,
    "workbench.tree.indent": 16,
    "workbench.tree.renderIndentGuides": "always",
    "vim.easymotion": true,
    "vim.enableNeovim": true,
    "vim.vimrc.enable": true,
    "vim.useSystemClipboard": true,
    "vim.statusBarPosition": "left",
    "vim.smartRelativeLine": true,
    "vim.useCtrlKeys": true,
    "vim.visualstar": true,
    "vim.leader": " ",
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<leader>", "i"],
            "after": ["<C-W>", "<C-J>"]
        },
        {
            "before": ["<leader>", "e"],
            "after": ["<C-W>", "<C-K>"]
        },
        {
            "before": ["<leader>", "c"],
            "after": ["<C-W>", "<C-L>"]
        },
        {
            "before": ["<leader>", "a"],
            "after": ["<C-W>", "<C-H>"]
        },
        {
            "before": ["8", "8"],
            "commands": ["editor.action.commentLine"]
        },
        {
            "before": ["<leader>", "s"],
            "after": ["<leader>", "<leader>", "/"]
        },
        {
            "before": ["<C-s>"],
            "after": ["<leader>", "<leader>", "/"]
        }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": ["8", "8"],
            "commands": ["editor.action.commentLine"]
        }
    ],
    "vim.handleKeys": {
        "<C-s>": true
    },
    //"vim.highlightedyank.enable": true,
    "editor.multiCursorModifier": "alt",
    "vim.cursorStylePerMode.normal": "block",
    "vim.cursorStylePerMode.insert": "underline",
    "vim.cursorStylePerMode.replace": "underline",
    "vim.cursorStylePerMode.visual": "underline",
    "vim.statusBarColorControl": false,
    "vim.statusBarColors.normal": ["#393939", "#747369"],
    "vim.statusBarColors.insert": ["#99cc99", "#334433"],
    "vim.statusBarColors.visual": ["#f99157", "#4c2c1c"],
    "vim.statusBarColors.visualline": ["#f99157", "#4c2c1c"],
    "vim.statusBarColors.visualblock": ["#f99157", "#4c2c1c"],
    /*
    "vim.statusBarColors.commandlineinprogress": ["#66cccc", "#ffffff"],
    "vim.statusBarColors.searchinprogressmode": ["#66cccc", "#ffffff"],
    "vim.statusBarColors.easymotionmode": ["#66cccc", "#ffffff"],
    "vim.statusBarColors.easymotioninputmode": ["#66cccc", "#ffffff"],
    "vim.statusBarColors.surroundinputmode": ["#66cccc", "#ffffff"],
    */

    "vim.true": "#ffcc66",
    "vim.easymotionMarkerForegroundColorOneChar": "#ffcc66",
    "vim.easymotionMarkerForegroundColorTwoCharFirst": "#ffcc66",
    "vim.easymotionMarkerForegroundColorTwoCharSecond": "#ffcc66",
    "vim.easymotionMarkerFontWeight": "regular",

    "vim.statusBarColors.replace": ["#f2777a", "#793c3d"],
    "workbench.colorCustomizations": {
        "statusBar.background": "#393939",
        "statusBar.noFolderBackground": "#393939",
        "statusBar.debuggingBackground": "#393939",
        "statusBar.foreground": "#747369",
        "statusBar.debuggingForeground": "#747369",
        "breadcrumb.foreground": "#747369",
        "editorIndentGuide.activeBackground1": "#505050",
        "editorIndentGuide.background1": "#404040",
        // "tab.activeBorderTop": "#f99157",
        "tab.activeForeground": "#ffffff",
        "terminal.background": "#2d2d2d",
        "terminal.foreground": "#d3d0c8",
        "terminalCursor.background": "#d3d0c8",
        "terminalCursor.foreground": "#d3d0c8",
        "terminal.ansiBlack": "#2d2d2d",
        "terminal.ansiBlue": "#6699cc",
        "terminal.ansiBrightBlack": "#747369",
        "terminal.ansiBrightBlue": "#6699cc",
        "terminal.ansiBrightCyan": "#66cccc",
        "terminal.ansiBrightGreen": "#99cc99",
        "terminal.ansiBrightMagenta": "#cc99cc",
        "terminal.ansiBrightRed": "#f2777a",
        "terminal.ansiBrightWhite": "#f2f0ec",
        "terminal.ansiBrightYellow": "#ffcc66",
        "terminal.ansiCyan": "#66cccc",
        "terminal.ansiGreen": "#99cc99",
        "terminal.ansiMagenta": "#cc99cc",
        "terminal.ansiRed": "#f2777a",
        "terminal.ansiWhite": "#d3d0c8",
        "terminal.ansiYellow": "#ffcc66"
    },
    "editor.semanticHighlighting.enabled": true,
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": ["variable", "variable.other"],
                "settings": {
                    "foreground": "#d3d0c8"
                }
            }
        ]
    },
    "workbench.colorTheme": "Base16 Dark Eighties",
    "markdown-preview-enhanced.previewTheme": "atom-dark.css",
    "markdown-preview-enhanced.codeBlockTheme": "auto.css",
    "breadcrumbs.enabled": true,
    "breadcrumbs.symbolPath": "off",
    "problems.decorations.enabled": false,
    "workbench.editor.decorations.badges": false,
    "workbench.editor.decorations.colors": false,

    // To improve performance,
    "extensions.experimental.affinity": {
        "vscodevim.vim": 1
    },
    "files.autoSave": "afterDelay",
    "keyboard.dispatch": "keyCode",
    "workbench.editor.editorActionsLocation": "hidden",
    "workbench.editor.showTabs": "multiple",
    "workbench.layoutControl.enabled": false,
    "workbench.iconTheme": null,
    "workbench.sideBar.location": "right",
    "window.customTitleBarVisibility": "never",
    "search.exclude": {
        "**/.git": true,
        "**/.gradle": true
    },
    "terminal.external.osxExec": "WezTerm.app",
    "terminal.integrated.gpuAcceleration": "off",
    "terminal.integrated.env.osx": {
        "TERM": "xterm-256color",
        "COLORTERM": "truecolor",
        "FORCE_COLOR": "3"
    },
    "terminal.integrated.minimumContrastRatio": 1,
    "terminal.integrated.drawBoldTextInBrightColors": false,
    "terminal.integrated.rendererType": "canvas",
    "terminal.integrated.tabs.enabled": true,
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.shellIntegration.enabled": true,
    "terminal.integrated.persistentSessionReviveProcess": "never",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "block",
    "terminal.integrated.defaultProfile.osx": "zsh",
    "terminal.integrated.profiles.osx": {
        "zsh": {
            "path": "/bin/zsh",
            "args": ["-l"],
            "env": {
                "TERM": "xterm-256color",
                "COLORTERM": "truecolor"
            }
        }
    },
    "editor.smoothScrolling": true,
    "editor.accessibilitySupport": "off",
    "workbench.panel.showLabels": false,
    "accessibility.signals.terminalBell": {
        "sound": "off"
    },
    "terminal.integrated.enableVisualBell": false
}
